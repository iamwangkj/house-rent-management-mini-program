<view class="page">
  <view class="user-avatar">
    <view class="global-user-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <view class="weui-label">账号</view>
      </view>
      <view class="weui-cell__bd">
        <input type="number" value="{{username}}" bindinput="handleUsernameInput" />
      </view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <view class="weui-label">密码</view>
      </view>
      <view class="weui-cell__bd">
        <input type="text" password value="{{password}}" bindinput="handlePasswordInput" />
      </view>
    </view>
  </view>
  <!-- 提交 -->
  <view class="btn-login-wrapper">
    <view class="weui-cell">
      <button class="" type="primary" loading="{{btnLoading}}" bindtap="handleLogin">登录</button>
    </view>
  </view>
</view>